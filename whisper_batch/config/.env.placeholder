# Pub/Sub設定
PUBSUB_TOPIC=whisper-queue

# whisper_jobsコレクション名
WHISPER_JOBS_COLLECTION=whisper_jobs

# DEVICE名 (cuda / cpu)
DEVICE=cuda

# バッチワーカーが Firestore を再ポーリングする間隔 (秒)
POLL_INTERVAL_SECONDS=5

# ローカル作業用一時ディレクトリ (コンテナ内)
LOCAL_TMP_DIR=/tmp

# ★ PyAnnote 用 HuggingFace 認証トークン
HF_AUTH_TOKEN=placeholder_huggingface_token_here

# --- 追加／変更 ---
GCS_BUCKET=placeholder-bucket-name
WHISPER_AUDIO_BLOB={file_hash}/audio.{ext}
WHISPER_TRANSCRIPTION_BLOB={file_hash}/transcription.json
WHISPER_DIARIZATION_BLOB={file_hash}/diarization.json
WHISPER_COMBINE_BLOB={file_hash}/combine.json